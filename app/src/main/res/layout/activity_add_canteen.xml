<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custombg"
    tools:context=".AddCanteen">


    <TextView
        android:id="@+id/txt_cname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:text="Management Name:" />

    <EditText
        android:id="@+id/edx_cname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
         />

    <TextView
        android:id="@+id/txt_cemail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Email:"
         />

    <EditText
        android:id="@+id/edx_cemail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:inputType="textPersonName"

         />

    <TextView
        android:id="@+id/txt_cpass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:text="Password:"
       />

    <EditText
        android:id="@+id/edx_cpass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:inputType="textPersonName"
       />

    <TextView
        android:id="@+id/txt_mobile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dip"
        android:text="Mobile:"
       />

    <EditText
        android:id="@+id/edx_cmobile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="245dp"
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="305dip"
        android:text="Address:"
        />

    <EditText
        android:id="@+id/edx_caddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:inputType="textPersonName"
        />

    <Button
        android:id="@+id/btn_cadd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        android:background="@drawable/addbutton"
        android:text="add" />

    <TextView
        android:id="@+id/txt_camount"
        android:layout_width="fill_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:text="Amount:"
       />

    <EditText
        android:id="@+id/edx_camount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="395dp"
        android:inputType="textPersonName"
        />


</RelativeLayout>