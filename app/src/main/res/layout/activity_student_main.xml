<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custombackground3"
    tools:context=".StudentMain">

    <Button
        android:id="@+id/btn_menuv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="view menu"
         />

    <Button
        android:id="@+id/btn_order"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:text="place order"
        />

    <Button
        android:id="@+id/btn_bal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:text="add balance"
         />

    <Button
        android:id="@+id/btn_draw"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:text="Withdraw Balance"
         />
    <Button
        android:id="@+id/btn_trans"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:text="Added Balance Transaction"
        />
    <Button
        android:id="@+id/btn_transs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:text="Withdraw Balance Transaction"
        />
</RelativeLayout>