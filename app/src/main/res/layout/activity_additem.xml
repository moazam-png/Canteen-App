<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custombg"
    tools:context=".Additem">

    <TextView
        android:id="@+id/txt_itemn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:text="Item Name:"
        />

    <EditText
        android:id="@+id/edx_itemn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Item Description:"
       />

    <EditText
        android:id="@+id/edx_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/txt_cost"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:text="Cost:"
       />

    <EditText
        android:id="@+id/edx_cost"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:inputType="textPersonName"
        />
    <TextView
        android:id="@+id/txt_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:text="Status(Available/Not Available):"
        />

    <EditText
        android:id="@+id/edx_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="245dp"
        android:inputType="textPersonName"
        />


    <Button
        android:id="@+id/btn_addi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:background="@drawable/addbutton"
        android:text="add" />



</RelativeLayout>