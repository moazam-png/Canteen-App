<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custombg"
    tools:context=".StudentBalanceAdd">

    <TextView
        android:id="@+id/txt_eemail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:text="Enter Email:"
        />

    <TextView
        android:id="@+id/txt_eamount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dip"
        android:text="Enter Amount:"
        />

    <EditText
        android:id="@+id/edx_eemail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:inputType="textPersonName"
       />

    <EditText
        android:id="@+id/edx_eamount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_eamount"
        app:layout_constraintStart_toEndOf="@+id/txt_eamount" />

    <Button
        android:id="@+id/btn_abalance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="280dp"
        android:background="@drawable/custombutton"
        android:text="add in student"
        />

    <Button
        android:id="@+id/btn_abalance2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:background="@drawable/custombutton2"
        android:text="add in canteen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_abalance" />
</RelativeLayout>